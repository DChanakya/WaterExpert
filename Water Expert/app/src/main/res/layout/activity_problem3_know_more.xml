<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.apbc.waterexpert.Problem3KnowMore">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/problem3KnowMoreResultLayout"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:padding="16dp"

        android:visibility="gone">
        <TextView
            android:id="@+id/problem3KnowMoreResultText"
            android:layout_width="wrap_content"
            android:textSize="18sp"
            android:paddingTop="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"

            android:layout_height="wrap_content"
            android:text="@string/no_data_found"
            android:layout_weight="1"/>

        <ImageView
            android:paddingTop="25dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:id="@+id/problem3KnowMoreImage"
            android:src="@drawable/color"
            android:layout_weight="1"
            android:scaleType="matrix"
            />

        <LinearLayout
            android:id="@+id/treatbutlay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="40dp"
            android:paddingTop="40dp">

            <android.support.v4.widget.Space
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="If you want to know the treatment methods"
                android:layout_weight="2"/>

            <Button

                android:id="@+id/problem3KnowMoretreatment"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="5dp"
                android:text="Click Here"
                />

            <android.support.v4.widget.Space
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />


        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/problem3KnowMoreResultLayout1"
        android:orientation="vertical"
        android:layout_marginTop="10dp"

        android:padding="16dp"

        android:visibility="gone">
        <TextView
            android:id="@+id/problem3KnowMoreResultText1"
            android:layout_width="wrap_content"
            android:textSize="18sp"
            android:paddingTop="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"

            android:layout_height="wrap_content"
            android:text="@string/no_data_found"
            android:layout_weight="1"/>

        <ImageView
            android:paddingTop="25dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:id="@+id/problem3KnowMoreImage1"
            android:scaleType="matrix"
            android:layout_weight="1"
            />
    </LinearLayout>
    </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
